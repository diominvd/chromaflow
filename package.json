{
  "name": "@diominvd/chromaflow",
  "version": "1.1.3",
  "description": "A lightweight and simple package for dynamically managing CSS variables in a project.",
  "author": "diominvd",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/diominvd/chromaflow"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "css",
    "variables",
    "dynamic",
    "theme",
    "colors",
    "typescript"
  ],
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && vite build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "vite": "^6.3.5",
    "@vitejs/plugin-react": "^4.4.1",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.89.0",
    "terser": "^5.39.2"
  }
}

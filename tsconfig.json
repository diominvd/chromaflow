{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./lib/*"],
    },
  },
  "exclude": ["node_modules", "dist"],
  "include": ["lib/**/*"]
}
